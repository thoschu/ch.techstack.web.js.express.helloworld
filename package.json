{
  "name": "io.server360.web.js.express.helloworld",
  "version": "2.4.2",
  "description": "Testproject for Kubernetes",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "prod": "npm start '0.0.0.0'",
    "staging": "npm run dev",
    "dev": "PORT=3000 npm start '127.0.0.1'",
    "buddy": "buddy ./test",
    "start:stop" : "concurrently \"npm run staging\" \"npm stop\"",
    "test": "concurrently \"npm run start:stop\" \"npm run buddy && mocha --timeout 10000\"",
    "test:qa": "concurrently \"npm run start:stop\" \"npm run buddy && npm run mochareport\"",
    "mochareport": "mocha --reporter mocha-junit-reporter --reporter-options mochaFile=./out/test/results/file.xml  --timeout 10000",
    "doc": "jsdoc ./**/*.js",
    "stop": "sleep 15 && pkill -f node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoschu/io.server360.web.js.express.helloworld.git"
  },
  "keywords": [
    "JavaScript",
    "Node.js",
    "Express.js",
    "Kubernetes",
    "Docker"
  ],
  "author": "Tom S. <thoschulte@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thoschu/io.server360.web.js.express.helloworld/issues"
  },
  "homepage": "https://github.com/thoschu/io.server360.web.js.express.helloworld#readme",
  "dependencies": {
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "handlebars": "^4.0.12",
    "morgan": "^1.9.1",
    "ramda": "^0.25.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "stringify-object": "^3.3.0"
  },
  "devDependencies": {
    "buddy.js": "^0.9.3",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.2",
    "concurrently": "^4.0.1",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0"
  }
}
