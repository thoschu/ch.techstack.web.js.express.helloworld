{
  "name": "io.server360.web.js.express.helloworld",
  "version": "2.4.3",
  "description": "Testproject for Kubernetes",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "prod": "npm start '0.0.0.0'",
    "qa": " npm run dev",
    "dev": "PORT=3000 npm start '127.0.0.1'",
    "buddy": "buddy ./test",
    "jshint": "gulp jshint",
    "test": "concurrently \"npm run dev\" \"npm stop\" \"npm run buddy && nyc --report-dir=out/test/coverage --reporter=cobertura --reporter=html --reporter=text mocha --timeout 10000\"",
    "test:qa": "concurrently \"npm run dev\" \"npm stop\" \"npm run buddy && npm run mochareport\"",
    "mochareport": "nyc --report-dir=out/test/coverage --reporter=cobertura --reporter=html --reporter=text mocha --reporter mocha-junit-reporter --reporter-options mochaFile=./out/test/results/file.xml --timeout 10000",
    "doc": "jsdoc -d ./out/doc ./**/*.js",
    "stop": "sleep 15 && pkill -f node",
    "gulp": "gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoschu/io.server360.web.js.express.helloworld.git"
  },
  "keywords": [
    "HTML",
    "CSS",
    "JavaScript",
    "Node.js",
    "Express.js",
    "Kubernetes",
    "Docker",
    "Frontend",
    "Backend"
  ],
  "author": "Tom S. <thoschulte@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thoschu/io.server360.web.js.express.helloworld/issues"
  },
  "homepage": "https://github.com/thoschu/io.server360.web.js.express.helloworld#readme",
  "dependencies": {
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "handlebars": "^4.0.12",
    "morgan": "^1.9.1",
    "ramda": "^0.25.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "stringify-object": "^3.3.0"
  },
  "devDependencies": {
    "buddy.js": "^0.9.3",
    "chai": "^4.2.0",
    "chai-match": "^1.1.1",
    "cheerio": "^1.0.0-rc.2",
    "concurrently": "^4.0.1",
    "gulp": "^4.0.0",
    "gulp-jshint": "^2.1.0",
    "gulp-jshint-xml-file-reporter": "^0.5.1",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.6",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^13.1.0"
  },
  "jshintConfig": {
    "curly": true,
    "eqeqeq": true,
    "nocomma": false,
    "esversion": 6
  }
}
